  {{#useAlamofire}}
  s.dependency 'Alamofire', '~> 5.4.3'
  {{/useAlamofire}}
  {{#usePromiseKit}}
  s.dependency 'PromiseKit/CorePromise', '~> 6.15.3'
  {{/usePromiseKit}}
  {{#useRxSwift}}
  s.dependency 'RxSwift', '~> 6.2.0'
  {{/useRxSwift}}
  s.swift_version = '5.1'
end
